@using RandomDataWebApi;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="body-content">
        @RenderBody()
        <footer class="help-page">
            <p>
                @WebApiApplication.Title @($"v{WebApiApplication.Version}") -
                <a href="https://github.com/sakapon-net/Random-Data-Web-API" target="_blank">Project Site on GitHub</a><br />
                @WebApiApplication.Copyright
            </p>
        </footer>
    </div>
</body>
</html>